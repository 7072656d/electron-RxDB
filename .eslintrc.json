{
    "parser": "babel-eslint",
    "extends": "standard",
    "plugins": [
      "react",
      "standard",
      "promise",
      "import",
      "jsx-a11y"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jasmine": true
    },
    "rules": {
      "semi": ["off"],
      "react/jsx-uses-vars": [2],
      "space-before-function-paren": ["off"],
      "no-multiple-empty-lines": ["off"],
      "quotes": ["off"],
      "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }]
    }
}
